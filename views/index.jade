extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Ingresar Nombre de Usuario Y Contrasena
					div.account-wall
						img(class='profile-img', src='http://icons.iconarchive.com/icons/scoyo/badge/256/Login-icon.png')
						form(class='form-signin', action='/login', method='POST')
							input(type='text', name='username' class='form-control', placeholder='Usuario',required, autofocus)
							input(type='password', name='password' class='form-control', placeholder='Contraseña', required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in
							span.clearfix
					//a(href='/signup', class='text-center new-account') Create an account
					#message
					if message
						h1.text-center.error-message #{message}